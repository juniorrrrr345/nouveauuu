generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String         @id @default(cuid())
  name        String
  description String?
  images      String // JSON array of image URLs
  videos      String // JSON array of video URLs
  categoryId  String
  farmId      String?
  stock       Int            @default(0)
  isActive    Boolean        @default(true)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  
  category    Category       @relation(fields: [categoryId], references: [id])
  farm        Farm?          @relation(fields: [farmId], references: [id])
  prices      ProductPrice[]

  @@map("products")
}

model ProductPrice {
  id            String  @id @default(cuid())
  productId     String
  label         String  // "500g", "1kg", etc.
  price         Float
  originalPrice Float?  // prix barr√©
  isDefault     Boolean @default(false)
  
  product       Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, label], name: "productId_label")
  @@map("product_prices")
}

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  image       String?
  isActive    Boolean   @default(true)
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  products    Product[]

  @@map("categories")
}

model Farm {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  location    String?
  image       String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  products    Product[]

  @@map("farms")
}

model SocialMedia {
  id       String  @id @default(cuid())
  platform String
  name     String
  url      String
  icon     String?
  isActive Boolean @default(true)
  order    Int     @default(0)

  @@map("social_media")
}

model SiteConfig {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  type      String   @default("text") // text, image, video, json
  updatedAt DateTime @updatedAt

  @@map("site_config")
}

model FooterContent {
  id       String  @id @default(cuid())
  section  String  // menu, information, reseaux
  title    String
  content  String
  links    String? // JSON array of links
  isActive Boolean @default(true)
  order    Int     @default(0)

  @@map("footer_content")
}